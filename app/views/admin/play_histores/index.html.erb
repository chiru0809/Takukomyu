<div class="container">
  <div class="d-flex align-items-center px-3 pt-3 mt-2">
    <h4 class="border-bottom border-primary border-3 page-title">プレイ履歴</h4>
  </div>

  <div class="d-flex align-items-center px-3 pb-2 my-2">
    <div class="ml-auto">
      <%= form_tag({controller:"play_histores",action:"index"}, method: :get) do %>
        <%= text_field_tag :search %>
        <%= submit_tag '検索する' %>
      <% end %>
      <%= link_to "条件クリア", admin_play_histores_path, class: "btn btn-secondary mt-1" %>
    </div>
  </div>
  <div class="my-2 p-3 bg-white rounded shadow-sm">
    <table class="table">
      <thead class="thead-light">
        <tr>
          <th>ユーザー</th><th>シナリオ名</th><th>タイトル</th><th>担当</th><th>登録日</th>
        </tr>
      </thead>
      <tbody>
        <% @play_histores.each do |play_history| %>
          <tr>
            <td class="align-middle"><%= link_to admin_user_path(play_history.user_id) do %>
                <%= image_tag play_history.user.get_profile_image.variant(resize: "60x60!") %>
                <%= play_history.user.name %>
              <% end %>
            </td>
            <td class="align-middle">
              <%= link_to admin_play_histore_path(play_history.id) do %>
                <%= play_history.scenario_name %>
              <% end %>
            </td>
            <td class="align-middle">
              <% if play_history.title_id == 1 %>
                <span class="p-2 bg-success text-light"><%= play_history.title.name %></span>
              <% else %>
                <span class="p-2 bg-warning text-light"><%= play_history.title.name %></span>
              <% end %>
            </td>
            <td class="align-middle"><%= play_history.play_style_i18n %></td>
            <td class="align-middle"><%= play_history.created_at.strftime('%Y/%m/%d') %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>