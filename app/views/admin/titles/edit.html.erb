<div class="container">
  <div class="d-flex align-items-center p-3 my-2">
    <h4 class="border-bottom border-primary border-3 page-title">タイトル名編集</h4>
  </div>
  <div class="first-form mx-auto">
    <div class="my-3 p-4 bg-white rounded shadow-sm">
      <%= form_with model: @title, url: admin_title_path(@title.id) do |f| %>
        <form>
          <div class="row mb-4">
            <label for="inputEmail" class="col-sm-3 col-form-label">タイトル名</label>
            <div class="col-sm-8">
              <%= f.text_field :name, autofocus: true, class: "form-control"%> <%= f.submit "更新", class: "btn btn-primary mt-3" %>
            </div>
          </div>
        </form>
      <% end %>
    </div>
  </div>
</div>