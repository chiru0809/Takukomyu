<div class="container">
  <div class="d-flex align-items-center p-3 my-2">
    <h4 class="border-bottom border-primary border-3 page-title">ユーザー一覧</h4>
    <div class="ml-auto">
      <%= form_tag({controller:"users",action:"index"}, method: :get) do %>
      <%= text_field_tag :search, "", placeholder: "ユーザー名" %>
      <%= submit_tag '検索する' %>
    <% end %>
    </div>
  </div>

  <div class="my-2 p-3 bg-white rounded shadow-sm">
    <table class="table">
      <thead class="thead-light">
        <tr>
          <th>ユーザー名</th>
          <th>メインプレイ</th>
          <th>登録日</th>
        </tr>
      </thead>
      <tbody>
        <% @users.each do |user| %>
          <tr>
            <td class="pt-2">
              <%= link_to admin_user_path(user.id) do %>
                <%= image_tag user.get_profile_image.variant(resize: "60x60!") %>
                <%= user.name %>
              <% end %>
            </td>
            <td class="align-middle">
              <% if user.title_id == nil %>
                <span class="p-2 text-dark">未設定</span>
              <% else %>
                <span class="p-2 text-dark"><%= user.title.name %></span>
              <% end %>

              <% if user.main_playstyle == nil %>
                プレイスタイル：未設定
              <% else %>
                プレイスタイル：<%= user.main_playstyle_i18n %>
              <% end %>
            </td>
            <td><%= user.created_at.strftime('%Y/%m/%d') %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
    </div>
  </div>
</div>