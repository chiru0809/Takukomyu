<table>
  <thead>
    <tr>
      <th>シナリオ名</th><th>タイトル</th><th>プレイ方法</th><th>登録日</th>
    </tr>
  </thead>
  <tbody>
    <% @play_histores.each do |play_history| %>
      <tr>
        <td>
          <%= link_to play_histore_path(play_history.id) do %>
            <%= play_history.scenario_name %>
          <% end %>
        </td>
        <td><%= play_history.title.name %></td>
        <td><%= play_history.play_style_i18n %></td>
        <td><%= play_history.created_at.strftime('%Y/%m/%d') %></td>
      </tr>
    <% end %>
  </tbody>
</table>