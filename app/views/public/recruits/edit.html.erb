<%= form_with model: @recruit, url: recruit_path(@recruit.id) do |f| %>
  <div class="field">
    <%= f.label "タイトル" %><br />
    <%= f.collection_select(:title_id, Title.all, :id, :name, {}, {class:"select-box"}) %>
  </div>
  <div class="field">
    <%= f.label "シナリオ名" %><br />
    <%= f.text_field :scenario_name, size: "50x1" %>
  </div>
  <div class="field">
    <%= f.label "メッセージ" %><br />
    <%= f.text_area :message, placeholder: recruit_message, size: "60x20" %>
  </div>
  <div class="field">
    <%= f.label "募集状況" %><br />
    <%= f.radio_button :recruit_status, true %>
    <%= f.label :recruit_status_true, "募集中" %>
    <%= f.radio_button :recruit_status, false %>
    <%= f.label :recruit_status_false, "募集終了" %>
  </div>
  <div class="field">
    <%= f.submit "更新" %>
  </div>
<% end %>

