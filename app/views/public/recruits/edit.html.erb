<div class="container">
  <div class="d-flex align-items-center p-3 my-2">
    <h4 class="border-bottom border-primary border-3 page-title">メンバー募集編集</h4>
  </div>

  <div class="my-2 p-3 bg-white rounded shadow-sm">
    <%= form_with model: @recruit, url: recruit_path do |f| %>
      <table class="table table-borderless">
        <tr class="border-bottom border-gray pb-2 my-3">
          <th>シナリオ名</th>
          <td><%= f.text_field :scenario_name, size: "50x1" %></td>
        </tr>
        <tr class="border-bottom border-gray pb-2 mb-3">
          <th>タイトル</th>
          <td><%= f.collection_select(:title_id, Title.all, :id, :name, {}, {class:"select-box"}) %></td>
        </tr>
        <tr class="border-bottom border-gray pb-2 my-3">
          <th>メッセージ</th>
          <td><%= f.text_area :message, placeholder: recruit_message, size: "60x20" %></td>
        </tr>
        <% if @recruit.status == "published" %>
          <tr>
            <th>募集状況</th>
            <td>
              <%= f.radio_button :recruit_status, true %>
              <%= f.label :recruit_status_true, "募集中" %>
              <%= f.radio_button :recruit_status, false %>
              <%= f.label :recruit_status_false, "募集終了" %>
            </td>
          </tr>
        <% end %>
        <% if @recruit.status == "draft" %>
          <tr>
            <th></th>
            <td>
              <%= f.radio_button :status, "published" %>
              <%= f.label :status_published, "公開" %>
              <%= f.radio_button :status, "draft" %>
              <%= f.label :recruit_status_draft, "下書き" %>
            </td>
          </tr>
        <% end %>
        <tr class="pb-2-my-3">
          <th></th>
          <td>
            <div class="text-right">
              <%= f.submit "更新", class: "btn btn-primary" %>
            </div>
          </td>
        </tr>
      </table>
    <% end %>
  </div>
</div>