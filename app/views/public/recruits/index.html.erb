<%= link_to "メンバーを募集する", new_recruit_path %>

<table>
  <thead>
    <tr>
      <th colspan="2" >マスター</th><th>シナリオ名</th><th>タイトル</th><th>更新日</th>
    </tr>
  </thead>
  <tbody>
    <% @recruits.each do |recruit| %>
      <tr>
        <td>
          <%= link_to user_path(recruit.user.id) do %>
            <%= image_tag recruit.user.get_profile_image(60,60) %>
          <% end %>
        </td>
        <td>
          <%= link_to recruit.user.name, user_path(recruit.user.id) %>
        </td>
        <td>
          <%= link_to recruit.scenario_name, recruit_path(recruit.id) %>
        </td>
        <td>
          <%= recruit.title.name %>
        </td>
        <td>
          <%= recruit.updated_at.strftime("%Y/%m/%d") %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>