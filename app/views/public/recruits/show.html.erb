<%= image_tag @recruit.user.get_profile_image(100,100) %><%= @recruit.user.name %>
<div class="field">
  <h4>タイトル</h4>
  <%= @recruit.title.name %>
</div>
<div class="field">
  <h4>シナリオ名</h4>
  <%= @recruit.scenario_name %>
</div>
<div class="field">
<h4>メッセージ</h4>
  <%= safe_join(@recruit.message.split("\n"), tag(:br) ) %>
</div>

<p><strong>
  <% if @recruit.recruit_status == true %>
    募集中
  <% else %>
    募集終了
  <% end %>
</strong></p>
<% if @recruit.user_id == current_user.id %>
  <%= link_to "編集", edit_recruit_path(@recruit.id) %>
  <%= link_to "削除", recruit_path(@recruit.id), method: :delete, data: {confirm: "削除しますか？"} %>
<% end %>

<div>
  <p>コメント</p>
  <% @recruit.comments.each do |comment| %>
     <p><%= image_tag comment.user.get_profile_image(80,80) %><%= comment.user.name %></p>
     <p><%= safe_join(comment.comment.split("\n"),tag(:br)) %></p>
     <p><%= comment.updated_at.strftime("%Y/%m/%d %H:%M") %></p>
     <% if comment.user == current_user %>
       <%= link_to "削除", recruit_comment_path(comment.recruit, comment), method: :delete, data: {confirm: "削除しますか？"} %>
     <% end %>
  <% end %>
</div>
<div>
  <%= form_with model: [@recruit, @comment] do |f| %>
    <%= f.text_area :comment, rows: '5', placeholder: "コメント" %>
    <%= f.submit "送信する" %>
  <% end %>
</div>

<div class="field">
  <%= link_to "一覧に戻る", recruits_path %>
</div>