<div class="container">
  <div class="d-flex align-items-center p-3 my-2">
    <h4 class="border-bottom border-primary border-3 page-title">新規登録</h4>
  </div>
  <div class="first-form mx-auto">
    <div class="my-3 p-4 bg-white rounded shadow-sm">
      <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
        <form>
          <div class="row mb-4">
            <label for="inputEmail" class="col-sm-3 col-form-label">ユーザー名</label>
            <div class="col-sm-8">
              <%= f.text_field :name, autofocus: true, class: "form-control" %>
            </div>
          </div>
          <div class="row mb-4">
            <label for="inputEmail" class="col-sm-3 col-form-label">Eメール</label>
            <div class="col-sm-8">
              <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control" %>
            </div>
          </div>
          <div class="row mb-4">
            <label for="inputPassword" class="col-sm-3 col-form-label">パスワード</label>
            <div class="col-sm-6">
              <%= f.password_field :password, autocomplete: "current-password", class: "form-control", :placeholder => "6桁以上" %>
            </div>
          </div>
          <div class="row mb-4">
            <label for="inputPassword" class="col-sm-3 col-form-label"></label>
            <div class="col-sm-6">
              <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control", :placeholder => "パスワード確認" %>
            </div>
          </div>
          <%= f.submit "新規登録", class: "btn btn-sign_up btn-block mb-3"%>
        </form>
      <% end %>

      <p class="text-center">または</p>
      <%= link_to "ログイン", new_user_registration_path, class: "btn btn-login btn-block"%>
    </div>
  </div>
</div>