<div class="container">
  <div class="d-flex align-items-center p-3 my-2">
    <h4 class="border-bottom border-primary border-3 page-title">ユーザー編集</h4>
  </div>
  <div class="first-form mx-auto">
    <div class="my-3 p-4 bg-white rounded shadow-sm">
      <%= form_with model: @user, url: user_path(@user.id) do |f| %>
        <form>
          <div class="row mb-4">
            <label for="inputEmail" class="col-sm-3 col-form-label">ユーザー画像</label>
            <div class="col-sm-8">
              <%= f.file_field :profile_image, placeholder: "プロフィール画像", accept: "image/*" %>
            </div>
          </div>
          <div class="row mb-4 mt-2">
            <label for="inputEmail" class="col-sm-3 col-form-label">ユーザー名</label>
            <div class="col-sm-7">
              <%= f.text_field :name, autofocus: true, class: "form-control" %>
            </div>
          </div>
          <div class="row mb-4">
            <label for="inputEmail" class="col-sm-3 col-form-label">Eメール</label>
            <div class="col-sm-7">
              <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control" %>
            </div>
          </div>
          <div class="row mb-4">
            <label for="inputPassword" class="col-sm-3 col-form-label">メインタイトル</label>
            <div class="col-sm-7">
              <%= f.collection_select(:title_id, Title.all, :id, :name, {}, {class:"select-box"}) %>
            </div>
          </div>
          <div class="row mb-4">
            <label for="inputPassword" class="col-sm-3 col-form-label">プレイスタイル</label>
            <div class="col-sm-7">
              <%= f.radio_button :main_playstyle, User.main_playstyles.key(0), checked: true %>
              <%= f.label :main_play_style_gm_only, User.main_playstyles_i18n[:gm_only] %>
              <%= f.radio_button :main_playstyle, User.main_playstyles.key(1) %>
              <%= f.label :main_play_style_gm_trend, User.main_playstyles_i18n[:gm_trend] %><br>
              <%= f.radio_button :main_playstyle, User.main_playstyles.key(2)%>
              <%= f.label :main_play_style_both, User.main_playstyles_i18n[:both] %>
              <%= f.radio_button :main_playstyle, User.main_playstyles.key(3) %>
              <%= f.label :main_play_style_player_trend, User.main_playstyles_i18n[:player_trend] %><br>
              <%= f.radio_button :main_playstyle, User.main_playstyles.key(4) %>
              <%= f.label :main_play_style_player_only, User.main_playstyles_i18n[:player_only] %>
            </div>
          </div>
          <div class="row mb-4">
            <label for="inputPassword" class="col-sm-3 col-form-label">自己紹介</label>
            <div class="col-sm-6 h-50">
              <%= f.text_area :message, size: "40x10" %>
            </div>
          </div>
          <div class="row mb-4">
            <label for="inputPassword" class="col-sm-3 col-form-label">公開設定</label>
            <div class="col-sm-6">
              <%= f.radio_button :is_private, false %>
              <%= f.label :is_private_false, "公開" %>
              <%= f.radio_button :is_private, true %>
              <%= f.label :is_private_true, "非公開" %>
            </div>
          </div>
          <%= f.submit '変更を保存', class: "btn btn-info" %>
        </form>
      <% end %>
    </div>
  </div>
</div>