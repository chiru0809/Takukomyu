<table>
  <tr>
    <th>ユーザー画像</th><td><%= image_tag @user.get_profile_image(100,100) %></td>
  </tr>
  <tr>
    <th>ユーザー名</th><td><%= @user.name %></td>
  </tr>
  <tr>
    <% if @user.title_id == nil %>
      <th>メインタイトル</th><td>未設定</td>
    <% else %>
      <th>メインタイトル</th><td><%= @user.title.name %></td>
    <% end %>
  </tr>
  <tr>
    <th>プレイスタイル</th><td><%= @user.main_playstyle_i18n %></td>
  </tr>
  <tr>
    <th>コメント</th><td><%= @user.message %></td>
  </tr>
  <tr>
    <th></th><td><%= @user.is_private %></td>
  </tr>
</table>
<% if @user.id == current_user.id %>
  <%= link_to "編集", edit_user_path(@user.id) %>
  <%= link_to "フォローユーザー", following_users_path %>
<% end %>



<% if current_user != @user %>
  <% if current_user.following?(@user) %>
    <%= link_to "フォロー外す", user_follows_path(@user.id), method: :delete, class: "btn btn-danger" %>
  <% else %>
    <%= link_to "フォローする", user_follows_path(@user.id), method: :post, class:"btn btn-success" %>
  <% end %>
<% end %>